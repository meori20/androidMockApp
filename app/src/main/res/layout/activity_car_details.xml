<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.android.mta.androiduserauthentication.Activities.CarDetailsActivity">

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ImageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/carDetailsImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"

                android:background="@drawable/purchase_button" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/carDescriptionLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/carMakeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Maker"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/carModelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Car Model"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/carYearLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Car Year"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PriceAndPurchaseLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/carPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Price"
                android:textColor="#009134"
                android:textSize="30dp" />

            <Button
                android:id="@+id/carPurchaseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/purchase_button"
                android:text="Purchase" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:layout_gravity="center_vertical"

            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/addReviewEditText"
                android:layout_width="250dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/addReviewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Review"
                android:hint="Write your review here"/>
        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
